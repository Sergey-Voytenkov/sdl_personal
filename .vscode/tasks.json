{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "-g",
                // "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",

                "-I/opt/homebrew/Cellar/sdl2/2.28.5/include",
                "-L/opt/homebrew/Cellar/sdl2/2.28.5/lib",
                "-lSDL2",

                "-I/opt/homebrew/Cellar/sdl2_image/2.6.3_2/include",
                "-L/opt/homebrew/Cellar/sdl2_image/2.6.3_2/lib",
                "-lSDL2_image",

                "-I/opt/homebrew/Cellar/sdl2_ttf/2.20.2/include",
                "-L/opt/homebrew/Cellar/sdl2_ttf/2.20.2/lib",
                "-lSDL2_ttf",
                "*.cpp"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}